---
import headshot from "../images/bust.png";
---

<div class="hero-component">
<div class="hero-image-wrapper"><img class="hero-image" src={headshot} /></div>
  <div class="arrow-container">
    <div class="arrow-wrapper">
      <div class="left arrow"></div>
    </div>
    <div class="arrow-wrapper"><div class="right arrow"></div></div>
  </div>
</div>
<style>
  .hero-component {
    display: grid;
    flex-flow: column nowrap;
    justify-items: center;
    align-items: center;
    grid-template: 85% 15% / 100%;
    height: calc(100vh - 4em);
    overflow-x: hidden;
  }
  
  .hero-image-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 75%;
    max-height: 70%;
    border-radius: 50%;
    transform: translateX(200%) rotate(180deg);
    animation: rollin 3s forwards 0.8s;
    visibility: hidden;
    aspect-ratio: 1 / 1;
    background: radial-gradient(ellipse farthest-corner at 0% 0%, rgba(var(--main-blue), .5) 5%, rgba(var(--main-purple), .7) 35%, rgba(var(--main-green), .9) 50%, rgba(var(--main-purple), 1) 65%, rgba(var(--main-blue), 1) 90%);
  }

  .hero-image {
    background-color: var(--background-black);
    marsgin: .35em ;
    border-radius: 50%;
    height: 100%;
    aspect-ratio: 1 / 1;
  }
  
  @keyframes rollin {
    0% {
      transform: translateX(200%) rotate(180deg);
    }
    50% {
      transform: rotate(360deg);
    }
    100% {
      transform: translateX(0);
      visibility: visible;
    }
  }

  .arrow-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    height: 100%;
    width: min(50vw, 500px);
    align-items: center;
    justify-content: center;
    overflow: hidden;
    opacity: 0;
    animation: arrow-flash 3s linear 3.5s forwards;
  }

  .arrow-wrapper {
    height: 100%;
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: start;
  }

  .arrow {
    width: 100%;
    height: 0.3em;
    background-color: var(--background-white)
  }

  .left {
    transform: skew(15deg) rotate(15deg);
    border-radius: 2% 0 0 100%;
  }
  .right {
    transform: skew(345deg) rotate(345deg);
    border-radius: 0 2% 100% 0;
  }

  @keyframes arrow-flash {
    0% {
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    40% {
      opacity: 0;
    }
    60% {
      opacity: 1;
    }
    80% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @media (max-width: 300px){
    .hero-component {
      height: calc(100vh - 8em);
    }
  }

  @media (prefers-color-scheme: dark){
    .hero-image{
      background-color: var(--background-black);
    }
    .arrow{
      background-color: var(--background-white)
    }
  }

  @media (prefers-color-scheme: light){
    .hero-image{
      background-color: var(--background-white);
    }
    .arrow{
      background-color: var(--background-black)
    }
  }
</style>
