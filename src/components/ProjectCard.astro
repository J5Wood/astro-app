---
import whiteGithubLogo from "../assets/github-white.png";
import blackGithubLogo from "../assets/github-black.png";

const { data } = Astro.props;
const { name, link, imgSrc, imgAlt, description, features, url } = data;
---

<div class="card-wrapper">
  <div class="card">
    <h2 class="card-heading">{name}</h2>
    <img class="project-image" src={imgSrc.src} alt={imgAlt} />
    <p class="card-description">{description}</p>
    <ul class="feature-list">
      {features.map((feature) => <li>{feature}</li>)}
    </ul>
    <a
      href={link}
      class="github-button"
      aria-label={`Navigate to the Github page for ${name}.`}
      target="_blank"
    >
      <img
        class="white github-logo"
        src={whiteGithubLogo.src}
        alt="Github Logo."
      />
    </a>
    <a
      href={link}
      class="github-button"
      aria-label={`Navigate to the Github page for ${name}.`}
      target="_blank"
    >
      <img
        class="black github-logo"
        src={blackGithubLogo.src}
        alt="Github Logo."
      />
    </a>
    {
      url ? (
        <a
          class="card-link hide"
          href={url}
          aria-label="Official guhradient website"
          target="_blank"
        >
          Try It Out
        </a>
      ) : null
    }
  </div>
</div>
<style>
  .github-logo {
    width: 100%;
  }

  .github-button {
    position: absolute;
    top: 1em;
    left: 1em;
    width: 4em;
    display: none;
  }

  .card-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 1em;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3px;
    position: relative;
    overflow: hidden;
  }

  .card-wrapper::before {
    background: linear-gradient(
      240deg,
      rgba(var(--main-blue), 1) 5%,
      rgba(var(--main-purple), 1) 10%,
      rgba(var(--main-green), 1) 30%,
      rgba(var(--main-blue), 1) 60%,
      rgba(var(--main-purple), 1) 70%,
      rgba(var(--main-green), 0.8) 80%
    );
    position: absolute;
    content: "";
    width: 370%;
    height: 300%;
    animation: spin-background 10s linear infinite;
  }

  @keyframes spin-background {
    100% {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 300px) {
    .card-wrapper::before {
      width: 400%;
    }
  }

  .card {
    height: 100%;
    width: 100%;
    display: grid;
    grid-template: auto auto auto / 1fr;
    align-items: space-around;
    flex-flow: column nowrap;
    background: var(--main-background);
    border-radius: 1em;
    gap: 1em;
    align-items: center;
    justify-items: center;
    position: relative;
    container-type: size;
    overflow-y: scroll;
  }

  .card-heading {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 1em;
  }

  .card-link {
    display: none;
  }

  .project-image {
    width: min(85%, 250px);
    aspect-ratio: 1 / 0.8;
    border-radius: 1em;
  }

  .card-description {
    text-indent: 1em;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .feature-list {
    height: 100%;
    display: flex;
    text-align: start;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: center;
    padding-left: 15%;
    display: none;
  }

  .show {
    display: inline;
  }

  .hide {
    display: none;
  }

  @media (max-width: 600px) {
    .github-button {
      position: initial;
    }
  }
</style>
