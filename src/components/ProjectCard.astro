---
import whiteGithubLogo from "../assets/github-white.png";
import blackGithubLogo from "../assets/github-black.png";
import { Image } from "astro:assets";

const { data } = Astro.props;
const { name, link, imgSrc, imgAlt, description, features } = data;
---

<div class="card-wrapper">
  <div class="card">
    <h2 class="card-heading">{name}</h2>
    <Image class="project-image" src={imgSrc} alt={imgAlt} />
    <p class="card-description">{description}</p>
    <ul class="feature-list">
      {features.map((feature) => <li>{feature}</li>)}
    </ul>
    <a href={link} class="github-button">
      <Image class="github-logo" src={whiteGithubLogo} alt="github-logo" />
    </a>
    <a href={link} class="github-button">
      <Image class="github-logo" src={blackGithubLogo} alt="github-logo" />
    </a>
  </div>
</div>
<style>
  .card-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 1em;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3px;
    position: relative;
    overflow: hidden;
  }

  .card-wrapper::before {
    background: linear-gradient(
      240deg,
      rgba(var(--main-blue), 1) 5%,
      rgba(var(--main-purple), 1) 10%,
      rgba(var(--main-green), 1) 30%,
      rgba(var(--main-blue), 1) 60%,
      rgba(var(--main-purple), 1) 70%,
      rgba(var(--main-green), 0.8) 80%
    );
    position: absolute;
    content: "";
    width: 300%;
    height: 300%;
    animation: spin-background 10s linear infinite;
  }

  @keyframes spin-background {
    100% {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 300px) {
    .card-wrapper::before {
      width: 400%;
    }
  }

  .card {
    height: 100%;
    width: 100%;
    display: grid;
    grid-template: auto auto auto auto / 1fr;
    align-items: space-around;
    flex-flow: column nowrap;
    background: var(--main-background);
    border-radius: 1em;
    gap: 1em;
    padding: 1em 0 1em 0;
    align-items: center;
    justify-items: center;
    position: relative;
    cursor: pointer;
  }

  .card-heading {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 100%;
  }

  .project-image {
    width: min(85%, 250px);
    height: auto;
    aspect-ratio: 1 / 0.8;
    border-radius: 1em;
  }

  .card-description {
    text-indent: 1em;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .feature-list {
    height: 100%;
    display: flex;
    text-align: start;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: center;
    padding-left: 15%;
    display: none;
  }

  .github-button {
    position: absolute;
    top: 1em;
    left: 1em;
    width: 4em;
    display: none;
  }

  .github-logo {
    width: 100%;
    height: auto;
  }

  .show {
    display: inline;
  }

  .hide {
    display: none;
  }

  @media (max-width: 600px) {
    .github-button {
      position: initial;
    }
  }
</style>
