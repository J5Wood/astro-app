---
import resume from "../assets/resume.pdf"
import blackBulb from "../images/black-bulb.png"
import whiteBulb from "../images/white-bulb.png"
---

<div class="nav">
  <h1>Jeremy Wood</h1>
  <span class="nav-links">
    <div class="nav-link-wrapper"><a class="nav-link" href="#about-section">About Me</a></div class="nav-link-wrapper">
      <div class="nav-link-wrapper"><a class="nav-link" href="#project-section">Projects</a></div>
      <div class="nav-link-wrapper"><a class="nav-link" href="#contact-section">Contact</a></div>
      <div class="nav-link-wrapper"><a class="nav-link" href={resume} target="_blank" download="jeremy/wood/resume">Resume</a></div>
    </span>
    <div class="animation-container">
      <hr class="animated-1" />
      <hr class="animated-2" />
      <hr class="animated-3" />
    </div>
    <div class="toggle-button-wrapper">
      <input type="checkbox" id="switch" />
      <label for="switch">
        <img class="switch-bulb" src={whiteBulb}/>
        <img class="switch-bulb" src={blackBulb}/>
      </label>
    </div>
</div>
<style >
  .nav {
    display: grid;
    grid-template: auto 2em auto / 1fr auto 1fr;
    padding-top: 1em;
    justify-items: center;
    align-items: center;
  }

  .nav h1 {
    display: inline;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    line-height: 1em;
  }

  .nav-links {
    display: grid;
    grid-template: auto / 1fr 1fr 1fr 1fr;
    align-items: center;
    text-align: center;
    gap: 1em;
    grid-column: 4 / 5;
  }

  .nav-link-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 2em;
    background: radial-gradient(circle farthest-corner at 0% 0%, rgba(169, 87, 241, 1) 0%, rgba(0, 236, 181, .5) 75%, rgba(16, 0, 236, .5) 100%);
    padding: .1em;
    transition: all 1s ease-in;
  }

  .nav-link-wrapper:hover{
    transform: translate(-1px,-1px);
    background: radial-gradient(circle farthest-corner at 0% 0%, rgba(169, 87, 241, 1) 0%, rgba(0, 236, 181, 1) 75%, rgba(16, 0, 236, 1) 100%);
  }

  .nav-link{
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: var(--main-text);
    background: var(--main-background);
    border-radius: 2em;
    white-space: nowrap;
    cursor: pointer;
    padding: .2em;
    
  }

  #held-button{
    background-color: rgb(var(--main-highlight));
    color: var(--main-background);
  }

  hr {
    border-radius: 0 0 0 5px;
    border: none;
    right: 0;
    position: absolute;
  }

  .animation-container{
    align-self: start;
    padding-top: .5em;
  }

  hr.animated-1 {
    height: .65em;
    animation: expand-3 2s ease-in-out 0.4s forwards;
    background-color: rgb(var(--main-green));
  }

  hr.animated-2 {
    height: 0.45em;
    animation: expand-2 2s ease-in-out 0.2s forwards;
    background-color: rgb(var(--main-purple));
  }

  hr.animated-3 {
    height: 0.25em;
    animation: expand-1 2s ease-in-out forwards;
    background-color: rgb(var(--main-blue));
  }

  @keyframes expand-1 {
    0% {
      width: 0%;
    }
    100% {
      width: 87%;
    }
  }

  @keyframes expand-2 {
    0% {
      width: 0%;
    }
    100% {
      width: 84%;
    }
  }

  @keyframes expand-3 {
    0% {
      width: 0%;
    }
    100% {
      width: 81%;
    }
  }

  .toggle-button-wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    height: fit-content;
    grid-row: 3 / 4;
    grid-column: 4 / 5;
    justify-self: end;
  }
  
  input[type=checkbox]{
    height: 0;
    width: 0;
    visibility: hidden;
  }
  
  label {
    cursor: pointer;
    width: 50px;
    height: 25px;
    background: rgb(var(--main-green));
    display: block;
    border-radius: 100px;
    position: relative;
    display: grid;
    grid-template: auto / 1fr 1fr;
    align-items: center;
    justify-items: center;
  }
  
  label:after {
    content: '';
    position: absolute;
    top: 2.5px;
    left: 2.5px;
    width: 20px;
    height: 20px;
    background: var(--main-background);
    border-radius: 90px;
    transition: all 0.3s ease-out;
  }
  
  input:checked + label {
    background: rgb(var(--main-blue));
  }
  
  input:checked + label:after {
    left: calc(100% - 2.5px);
    transform: translateX(-100%);
    background: var(--main-background);
  }
  
  label:active:after {
    width: 45px;
  }
  
  .switch-bulb{
    height: 75%;
    width: 75%;
  }

  @media (max-width: 450px) {
    .nav-links {
      display: grid;
      grid-template: auto auto / 1fr 1fr ;
      align-items: center;
      text-align: center;
      gap: 1em;
    }
  }

  @media (max-width: 300px){
    .nav-links{
    display: grid;
    grid-template: auto auto auto auto/ 1fr ;
    align-items: center;
    text-align: center;
    gap: 1em;
    }
  }
</style>
<script>
  const links = document.querySelectorAll(".nav-link")

  links.forEach(link => {
    link.addEventListener("mouseover",(e) => e.target.classList.add("highlight"))
    link.addEventListener("mousedown",(e) => {
      e.target.classList.remove("highlight");
      e.target.setAttribute("id", "held-button");
    })
    link.addEventListener("mouseleave",(e) => {
      e.target.classList.remove("highlight");
      e.target.removeAttribute("id", "held-button");
    })
  })

  const lightSwitch = document.getElementById("switch")
  if(window.matchMedia('(prefers-color-scheme: light)').matches){
    lightSwitch.checked = true
  }

  function setColorScheme(e){
    if(e.target.checked){
      document.documentElement.classList.add("light")
      document.documentElement.classList.remove("dark")
    } else {
      document.documentElement.classList.add("dark")
      document.documentElement.classList.remove("light")
    }
  }

  lightSwitch.addEventListener("click", setColorScheme)
</script>