---
import resume from "../assets/resume.pdf"

---
<!-- ! Can't click collapsed buttons!!! -->

<div class="nav">
  <h1>Jeremy Wood</h1>
  <span class="nav-links">
    <div class="nav-link-wrapper"><a class="nav-link" href="#about-section">About Me</a></div class="nav-link-wrapper">
    <div class="nav-link-wrapper"><a class="nav-link" href="#project-section">Projects</a></div>
    <div class="nav-link-wrapper"><a class="nav-link" href="#contact-section">Contact</a></div>
    <div class="nav-link-wrapper"><a class="nav-link" href={resume} target="_blank" download="jeremy/wood/resume">Resume</a></div>
  </span>
  <div class="animation-container">
    <hr class="animated-1" />
    <hr class="animated-2" />
    <hr class="animated-3" />
  </div>
</div>
<style >
  .nav {
    display: grid;
    grid-template: auto / 1fr auto 1fr;
    padding-top: 1em;
  }

  .nav h1 {
    display: inline;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    line-height: 1em;
  }

  .nav-links {
    display: grid;
    grid-template: auto / 1fr 1fr 1fr 1fr;
    align-items: center;
    text-align: center;
    gap: 1em;
    grid-column: 3 / 4;
  }

  .nav-link-wrapper{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 2em;
    background: radial-gradient(circle farthest-corner at 0% 0%, rgba(169, 87, 241, 1) 0%, rgba(0, 236, 181, .5) 75%, rgba(16, 0, 236, .5) 100%);
    padding: .1em;
    transition: all 1s ease-in;
  }

  .nav-link-wrapper:hover{
    transform: translate(-1px,-1px);
    background: radial-gradient(circle farthest-corner at 0% 0%, rgba(169, 87, 241, 1) 0%, rgba(0, 236, 181, 1) 75%, rgba(16, 0, 236, 1) 100%);
  }

  .nav-link{
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: var(--text-white);
    background: var(--background-black);
    border-radius: 2em;
    white-space: nowrap;
    cursor: pointer;
  }

  #held-button{
    background-color: rgb(var(--main-green));
    color: var(--background-black);
  }

  hr {
    border-radius: 0 0 0 5px;
    border: none;
    right: 0;
    position: absolute;
  }

  hr.animated-1 {
    height: .65em;
    animation: expand-3 2s ease-in-out 0.4s forwards;
    background-color: rgb(var(--main-green));
  }

  hr.animated-2 {
    height: 0.45em;
    animation: expand-2 2s ease-in-out 0.2s forwards;
    background-color: rgb(var(--main-purple));
  }

  hr.animated-3 {
    height: 0.25em;
    animation: expand-1 2s ease-in-out forwards;
    background-color: rgb(var(--main-blue));
  }

  @keyframes expand-1 {
    0% {
      width: 0%;
    }
    100% {
      width: 87%;
    }
  }

  @keyframes expand-2 {
    0% {
      width: 0%;
    }
    100% {
      width: 84%;
    }
  }

  @keyframes expand-3 {
    0% {
      width: 0%;
    }
    100% {
      width: 81%;
    }
  }

  @media (max-width: 450px) {
    .nav-links {
      display: grid;
      grid-template: auto auto / 1fr 1fr ;
      align-items: center;
      text-align: center;
      gap: 1em;
    }
  }

  @media (max-width: 300px){
    .nav-links{
    display: grid;
    grid-template: auto auto auto auto/ 1fr ;
    align-items: center;
    text-align: center;
    gap: 1em;
    }
  }

  @media (prefers-color-scheme: dark){``
    .nav-link{
      color: var(--text-white);
      background: var(--background-black);
    }
  }
  @media (prefers-color-scheme: light){
    .nav-link{
      color: var(--text-black);
      background: var(--background-white);
    }
  }
</style>
<script>
  const links = document.querySelectorAll(".nav-link")

  links.forEach(link => {
    link.addEventListener("mouseover",(e) => e.target.classList.add("highlight"))
    link.addEventListener("mousedown",(e) => {
      e.target.classList.remove("highlight");
      // Set as ID for greater specificity
      e.target.setAttribute("id", "held-button");
    })
    link.addEventListener("mouseleave",(e) => {
      e.target.classList.remove("highlight");
      e.target.removeAttribute("id", "held-button");
    })
  })

</script>